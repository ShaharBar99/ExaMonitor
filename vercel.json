{
  "version": 2,
  "builds": [
    {
      "src": "server/src/app.js",
      "use": "@vercel/node"
    },
    {
      "src": "examonitor-vite/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "rewrites": [
    {
      "source": "/auth/:path*",
      "destination": "/server/src/app.js"
    },
    {
      "source": "/admin/:path*",
      "destination": "/server/src/app.js"
    },
    {
      "source": "/exams/:path*",
      "destination": "/server/src/app.js"
    },
    {
      "source": "/classrooms/:path*",
      "destination": "/server/src/app.js"
    },
    {
      "source": "/api/student/:path*",
      "destination": "/server/src/app.js"
    },
    {
      "source": "/attendance/:path*",
      "destination": "/server/src/app.js"
    },
    {
      "source": "/bot/:path*",
      "destination": "/server/src/app.js"
    },
    {
      "source": "/incidents/:path*",
      "destination": "/server/src/app.js"
    },
    {
      "source": "/notifications/:path*",
      "destination": "/server/src/app.js"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}